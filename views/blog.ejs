<%- include('header.ejs')%>

    <div class="container-fluid blog">
        <br><br><br>
        <div class="container ">
        <div class="row">
            <% r.forEach((item)=>{ %> 
            <div class="col-md-4">
                <div class="blog-box">
                    
                    
                                
                               
                                        <img src="<%= item.image.url %>" width="300px" height="300px" alt="">
                                         
                                        <h3> <%= item.title %></h3>
                                        <p><%= item.createdAt.toLocaleDateString() %></p>
                                        <p><%= item.description.slice(0,200) %> </p>
                                        <a href="/blogdetail/item._id" class="btn btn-danger">Read more...</a>

                                        <br><br><br><br>
                                    
                               
                            </div>
                        </div>
                        <br><br><br>
                        <%})%> 
                    </div>


