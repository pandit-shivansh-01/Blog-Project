<%- include('header.ejs')%>

    <div class="container-fluid form">
      <br><br><br>
        <div class="row justify-content-center ">
        
        
          <div class="col-md-6">
            <h1 style="color: black;">Contact Us</h1>
            <form  method="post" enctype="multipart/form-data" action="/contactinsert">
              <div class="form-group" >
                <input type="text" name="name" class="form-control" placeholder="Name">
              </div>
              <br>
              <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="E-Mail">
              </div>
              <br>
              <div class="form-group">
                <input type="text" name="phoneno" class="form-control" placeholder="Phone">
              </div>
              <br>
              <div class="form-group">
                <textarea name="message" rows="5" class="form-control" placeholder="Message"></textarea>
              </div>
              <br>
              <div class="form-group">
                <button type="submit" class="btn " style="background-color: #111; color: white;">Send Message</button>
              </div>
              <br><br><br><br><br>
            </form>
          </div>
      </div>
    </div>

<%- include('footer.ejs')%>